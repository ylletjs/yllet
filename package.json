{
  "name": "yllet",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/eslint-parser": "7.16.3",
    "@yllet/babel-preset-main": "1.1.1",
    "babel-jest": "27.4.2",
    "eslint": "8.4.0",
    "isomorphic-fetch": "3.0.0",
    "jest": "27.4.3",
    "jest-mock": "27.4.2",
    "lerna": "4.0.0",
    "mocha": "9.1.3",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "semistandard": "16.0.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build",
    "start": "lerna run start",
    "test": "yarn build && yarn test:coverage",
    "test:unit": "jest packages/**",
    "test:coverage": "yarn test:unit --coverage",
    "postinstall": "lerna bootstrap",
    "lint": "semistandard"
  },
  "semistandard": {
    "parser": "@babel/eslint-parser",
    "ignore": [
      "examples/*/**.js",
      "packages/*/__tests__/**.js",
      "packages/*/__tests__/Transport/**.js"
    ],
    "globals": [
      "Headers",
      "fetch"
    ]
  }
}
